#include<msp430g2553.h>
/*
 * 7 rows and 5 cols
 * 7 rows are in drain type config
 * 5 cols are in source type config
 * the cols are driven directly
 *
 */
//Define our pins
#define FONTOFFSET 32				// Offset of font array to ascii
#define FONTWIDTH 5					// Number of bytes wide
#define SPEED 22                    // more is slow
#define SWC BIT5
//declare functions
unsigned volatile int mode=0;
void delay ( unsigned int );
char mask(int);
unsigned char displaybuff[]={0x00, 0x00, 0x00, 0x00, 0x00};
