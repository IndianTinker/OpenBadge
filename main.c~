void displayChar(unsigned char inChar)   // Displays Static Non Scrolling Text
{					// Function to display a character
	int i,j;
	for(j=0;j<SPEED;j++)
	{
	for(i=0;i<FONTWIDTH;i++)
		{
			P1OUT|=System5x7[(inChar-FONTOFFSET)*5+i];		// Set the LEDs to the character part LSB is default if MSB then upside Down
            P2OUT|=mask(i);
		    __delay_cycles(1000);
		    P2OUT=0x00; // Refresh Display
		    P1OUT=0x00;

		}
    P2OUT=0x00; // Refresh Display
    P1OUT=0x00;

	
	}

}
void displayBuff(unsigned char displaybuff[5])             // Displays current buff!
{					// Function to display a character
	int i,j;
	for(j=0;j<SPEED;j++)
	{
	for(i=0;i<FONTWIDTH;i++)
		{
			P1OUT|=displaybuff[i];		// Set the LEDs to the character part LSB is default if MSB then upside Down
            P2OUT|=mask(i);
		    __delay_cycles(1000);
		    P2OUT=0x00; // Refresh Display
		    P1OUT=0x00;
		}
      P2OUT=0x00; // Refresh Display
      P1OUT=0x00;

	}

}
void initbuff()                    //Refresh the display
{
	int i;
	for(i=0;i<5;i++)
	{
		displaybuff[i]=0x00;
	}
}

int i;
int length;
int main( void )
{
  // Stop watchdog timer to prevent time out reset
  WDTCTL = WDTPW + WDTHOLD;
  BCSCTL1 = CALBC1_1MHZ;
  DCOCTL = CALDCO_1MHZ;
  P1OUT=0x00;
  P2OUT=0x00;
  P1DIR |= (BIT0+BIT1+BIT2+BIT3+BIT4+BIT5+BIT6);  // Setup pins as outputs
  P2DIR|=(BIT0+BIT1+BIT2+BIT3+BIT4);

 while(1)
 {

displayChar('7');

}





}
}
void delay(unsigned int ms)
{
 while (ms--)
    {
        __delay_cycles(1000); // set for 16Mhz change it to 1000 for 1 Mhz
    }
}
char mask(int i)
{   char mask;
	switch(i)
	{
	case 0: mask=BIT0;
	        break;

	case 1: mask=BIT1;
	        break;
	case 2: mask=BIT2;
	        break;
	case 3: mask=BIT3;
	        break;
	case 4: mask=BIT4;
	        break;
	case 5: mask=BIT5;
	        break;
	case 6: mask=BIT6;
	        break;
	case 7: mask=BIT7;
	        break;


	}
	return mask;
}


